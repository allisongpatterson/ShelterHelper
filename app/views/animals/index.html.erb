<h2>Animal Index Page</h2>

<table class='table table-striped'>
  <thead>
    <th><%= sort_by :id %></th>
    <th><%= sort_by :name %></th>
    <th><%= sort_by :age %></th>
    <th><%= sort_by :sex %></th>
    <th><%= sort_by :shelter_id %></th>
  </thead>
  <tbody>
    <%- @animals.each do |animal| -%>
      <tr>
        <td><%= animal.id %></td>
        <td><%= animal.name %></td>
        <td><%= animal.age %></td>
        <td><%= animal.sex %></td>
        <td><%= animal.shelter_id %></td>
        <td><%= link_to "view details", animal, class: 'btn btn-primary' %></td>
      </tr>
    <%- end -%>
  </tbody>
</table>
